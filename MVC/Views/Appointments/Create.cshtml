@model databaseAPI.Model.AppointmentsViewModel


@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Appointment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.AppointmentViewModel.RoomNumber" class="control-label"></label>
                <input asp-for="@Model.AppointmentViewModel.RoomNumber" class="form-control" />
                <span asp-validation-for="@Model.AppointmentViewModel.RoomNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.AppointmentViewModel.AppointmentDate" class="control-label"></label>
                <input asp-for="@Model.AppointmentViewModel.AppointmentDate" class="form-control" />
                <span asp-validation-for="@Model.AppointmentViewModel.AppointmentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.AppointmentViewModel.AppointmentTime" class="control-label"></label>
                <input asp-for="@Model.AppointmentViewModel.AppointmentTime" class="form-control" />
                <span asp-validation-for="@Model.AppointmentViewModel.AppointmentTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.AppointmentViewModel.AppointmentNotes" class="control-label"></label>
                <input asp-for="@Model.AppointmentViewModel.AppointmentNotes" class="form-control" />
                <span asp-validation-for="@Model.AppointmentViewModel.AppointmentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Doctor Name</label>
                <select asp-for="@Model.AppointmentViewModel.DoctorId" class="form-control" asp-items="@Model.DoctorViewModel"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Patient Name</label>
                <select asp-for="@Model.AppointmentViewModel.PatientId" class="form-control" asp-items="@Model.PatientViewModel"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

