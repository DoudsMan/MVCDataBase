@model databaseAPI.Model.AppointmentsViewModel

@{
    ViewData["Title"] = "Delete";
}



<div class="container-fluid rounded bg-dark mr-5">
    <h3 class="text-center text-light">Are you sure you want to remove this appointment?</h3>
    <div class="container text-light justify-content-center">
        <hr style="color:white" />
    </div>

    <div class="d-flex justify-content-center">
        <div class="card" style="width: 18rem;">
            <div class="card-header">
                <strong>Appointment ID: </strong>@Model.AppointmentViewModel.AppointmentId
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <strong>Appointment Date: </strong>@Model.AppointmentViewModel.AppointmentDate
                </li>
                <li class="list-group-item">
                    <strong>Appointment Time: </strong>@Model.AppointmentViewModel.AppointmentTime
                </li>
                <li class="list-group-item">
                    <strong>Appointment Notes: </strong>@Model.AppointmentViewModel.AppointmentNotes
                </li>
                <li class="list-group-item">
                    <strong>Patient: </strong>@Model.deletePatient.PatientName
                </li>
                <li class="list-group-item">
                    <strong>Doctor: </strong>@Model.deleteDoctor.DoctorName
                </li>
            </ul>
        </div>
    </div>

    <div class="text-center">
        <a asp-action="Index">Back to List</a>
    </div>
    <div class="container bg-dark" style="height:100px">
        <div class="h-50 row justify-content-center m-5">
            <form asp-action="Delete">
                <input type="hidden" asp-for="@Model.AppointmentViewModel.AppointmentId" />
                <input type="submit" value="Delete" class="btn btn-danger" />
            </form>
        </div>
    </div>

</div>
