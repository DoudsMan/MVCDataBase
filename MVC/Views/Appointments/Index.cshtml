@model IEnumerable<databaseAPI.Model.Appointment>

@{
    ViewData["Title"] = "Index";
}

    <div class="container-fluid rounded bg-dark mr-5">
        <h1 class="text-center text-light">Brookings Medical Center Appointments</h1>
        <table class="table table-striped table-dark rounded">
            <thead>
                <tr>
                    <th scope="row">
                        Room Number:
                    </th>
                    <th scope="row">
                        Appointment Date:
                    </th>
                    <th scope="row">
                        Appointment Time:
                    </th>
                    <th scope="row">
                        Appointment Notes:
                    </th>
                    <th scope="row">
                        Doctor:
                    </th>
                    <th scope="row">
                        Patient:
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.RoomNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AppointmentDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AppointmentTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AppointmentNotes)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DoctorId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PatientId)
                        </td>
                        <td>
                            <div class="row">
                                <a class="col mr-3 btn btn-primary btn-lg active" role="button" aria-pressed="true" asp-action="Edit" asp-route-id="@item.AppointmentId">Edit</a> 
                                <a class="col mr-3 btn btn-primary btn-lg active" role="button" aria-pressed="true" asp-action="Delete" asp-route-id="@item.AppointmentId">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="container bg-dark" style="height:100px">
            <div class="h-50 row justify-content-center mr-5">
                <a class="btn-primary btn-lg active" role="button" aria-pressed="true" asp-action="Create">Add New Appointment</a>
            </div>
        </div>
    </div>