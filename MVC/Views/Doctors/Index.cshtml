@model IEnumerable<databaseAPI.Model.Doctor>

@{
    ViewData["Title"] = "Index";
}
    <div class="container-fluid rounded bg-dark mr-5">
        <h1 class="text-center text-light">Brookings Medical Center Doctors</h1>

        <table class="table table-striped table-dark rounded">
            <thead>
                <tr>
                    <th scope="col">Doctor ID:</th>
                    <th scope="col">Doctor Name:</th>
                    <th scope="col">Specialty:</th>
                    <th scope="col">Department:</th>
                    <th scope="col"></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row"> @Html.DisplayFor(modelItem => item.DoctorId) </th>
                        <td>
                            @Html.DisplayFor(modelItem => item.DoctorName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Specialty)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Department)
                        </td>
                        <td>
                            <div class="row">
                                <a class="col mr-3 btn btn-primary btn-lg active" role="button" aria-pressed="true" asp-action="Edit" asp-route-id="@item.DoctorId.ToString()">Edit</a>
                                <a class="col mr-3 btn btn-primary btn-lg active" role="button" aria-pressed="true" asp-action="Delete" asp-route-id="@item.DoctorId.ToString()">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="container bg-dark" style="height:100px">
            <div class="h-50 row justify-content-center mr-5">
                <a class="btn-primary btn-lg active" role="button" aria-pressed="true" asp-action="Create">Add New Doctor</a>
            </div>
        </div>

    </div>
