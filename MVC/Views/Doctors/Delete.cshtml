@model databaseAPI.Model.Doctor

@{
    ViewData["Title"] = "Delete";
}


<div class="container-fluid rounded bg-dark mr-5">
    <h3 class="text-center text-light">Are you sure you want to remove this doctor?</h3>
    <div class="container text-light justify-content-center">
        <hr style="color:white" />
    </div>

    <div class="d-flex justify-content-center">
        <div class="card" style="width: 18rem;">
            <div class="card-header">
                <strong>Doctor Name: </strong>@Html.DisplayFor(model => model.DoctorName)
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <strong>Specialty: </strong>@Html.DisplayFor(model => model.Specialty)
                </li>
                <li class="list-group-item">
                    <strong>Department: </strong>@Html.DisplayFor(model => model.Department)
                </li>
            </ul>
        </div>
    </div>

    <div class="text-center">
        <a asp-action="Index">Back to List</a>
    </div>
    <div class="container bg-dark" style="height:100px">
        <div class="h-50 row justify-content-center m-5">
            <form asp-action="Delete">
                <input type="hidden" asp-for="DoctorId" />
                <input type="submit" value="Delete" class="btn btn-danger" />
            </form>
        </div>
    </div>

</div>
