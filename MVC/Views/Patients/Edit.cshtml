@model databaseAPI.Model.PatientView

@{
    ViewData["Title"] = "Edit";
}
<div class="container-fluid rounded bg-dark mr-5">
    <h1 class="text-center text-light">Edit Patient Information</h1>
    <hr />
    <div class="row">
        <div class="container">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-light"></div>
                <input type="hidden" asp-for="@Model.Patient.PatientId" />
                <div class="form-group">
                    <label class="control-label text-light">Doctor Name</label>
                    <select asp-for="@Model.Patient.DoctorId" class="form-control" asp-items="@Model.Doctors">
                    </select>
                </div>
                <div class="form-group">
                    <label class="control-label text-light">Patient Name</label>
                    <input asp-for="@Model.Patient.PatientName" class="form-control" />
                    <span asp-validation-for="@Model.Patient.PatientName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label text-light">Room Number</label>
                    <input asp-for="@Model.Patient.RoomNumber" class="form-control" />
                    <span asp-validation-for="@Model.Patient.RoomNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label text-light">Age</label>
                    <input asp-for="@Model.Patient.Age" class="form-control" />
                    <span asp-validation-for="@Model.Patient.Age" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label text-light">Condition</label>
                    <input asp-for="@Model.Patient.Condition" class="form-control" />
                    <span asp-validation-for="@Model.Patient.Condition" class="text-danger"></span>
                </div>
                <div class="h-50 row justify-content-center mr-5">
                    <input type="submit" value="Save" class="btn-primary btn-lg active" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
