@model databaseAPI.Model.Patient

@{
    ViewData["Title"] = "Delete";
}
    <div class="container-fluid rounded bg-dark mr-5">
        <h3 class="text-center text-light">Are you sure you want to remove this patient?</h3>
        <div class="container text-light justify-content-center">
            <hr style="color:white" />
        </div>

        <div class="d-flex justify-content-center">
            <div class="card" style="width: 18rem;">
                <div class="card-header">
                    <strong>Patient Name: </strong>@Html.DisplayFor(model => model.PatientName)
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <strong>Room Number: </strong>@Html.DisplayFor(model => model.RoomNumber)
                    </li>
                    <li class="list-group-item">
                        <strong>Age: </strong>@Html.DisplayFor(model => model.Age)
                    </li>
                    <li class="list-group-item">
                        <strong>Condition: </strong>@Html.DisplayFor(model => model.Condition)
                    </li>
                    <li class="list-group-item">
                        <strong>Doctor ID: </strong>@Html.DisplayFor(model => model.DoctorId)
                    </li>
                </ul>
            </div>
        </div>

        <div class="text-center">
            <a asp-action="Index">Back to List</a>
        </div>
        <div class="container bg-dark" style="height:100px">
            <div class="h-50 row justify-content-center m-5">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="PatientId" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
