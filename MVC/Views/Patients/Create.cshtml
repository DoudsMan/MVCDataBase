@model databaseAPI.Model.PatientView

@{
    ViewData["Title"] = "Create";
}

    <div class="container-fluid rounded bg-dark mr-3">
        <h1 class="text-center text-light">Create New Patient</h1>
        <div class="row">
            <div class="container text-white">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label class="control-label">Patient ID</label>
                        <input asp-for="@Model.Patient.PatientId" class="form-control" />
                        <span asp-validation-for="@Model.Patient.PatientId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Doctor Name</label>
                        <select asp-for="@Model.Patient.DoctorId" class="form-control" asp-items="@Model.Doctors">
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Patient Name</label>
                        <input asp-for="@Model.Patient.PatientName" class="form-control" />
                        <span asp-validation-for="@Model.Patient.PatientName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Room Number</label>
                        <input asp-for="@Model.Patient.RoomNumber" class="form-control" />
                        <span asp-validation-for="@Model.Patient.RoomNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Patient.Age" class="control-label"></label>
                        <input asp-for="@Model.Patient.Age" class="form-control" />
                        <span asp-validation-for="@Model.Patient.Age" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Patient.Condition" class="control-label"></label>
                        <input asp-for="@Model.Patient.Condition" class="form-control" />
                        <span asp-validation-for="@Model.Patient.Condition" class="text-danger"></span>
                    </div>
                    <div class="h-50 row justify-content-center mr-5">
                        <input type="submit" value="Create" class="btn-primary btn-lg active" />
                    </div>
                </form>
            </div>
        </div>    <div>
            <a asp-action="Index">Back to List</a>
     </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
