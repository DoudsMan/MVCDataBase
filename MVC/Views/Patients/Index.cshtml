@model IEnumerable<databaseAPI.Model.Patient>

@{
    ViewData["Title"] = "Index";
}

    <div class="container-fluid rounded bg-dark mr-5">
        <h1 class="text-center text-light">Brookings Medical Center Patients</h1>

        <table class="table table-striped table-dark rounded">
            <thead>
                <tr>
                    <th scope="row">
                        Patient Name:
                    </th>
                    <th scope="row">
                        Room Number:
                    </th>
                    <th scope="row">
                        Age:
                    </th>
                    <th scope="row">
                        Condition:
                    </th>
                    <th scope="row">
                        Doctor ID:
                    </th>
                    <th scope="row"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">
                            @Html.DisplayFor(modelItem => item.PatientName)
                        </th>
                        <td>
                            @Html.DisplayFor(modelItem => item.RoomNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Age)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Condition)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DoctorId)
                        </td>
                        <td>
                            <div class="row">
                                <a class="col mr-3 btn btn-primary btn-lg active" role="button" aria-pressed="true" asp-action="Edit" asp-route-id="@item.PatientId.ToString()">Edit</a> 
                                <a class="col mr-3 btn btn-primary btn-lg active" role="button" aria-pressed="true" asp-action="Details" asp-route-id="@item.PatientId.ToString()">Details</a> 
                                <a class="col mr-3 btn btn-primary btn-lg active" role="button" aria-pressed="true" asp-action="Delete" asp-route-id="@item.PatientId.ToString()">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>


        <div class="container bg-dark" style="height:100px">
            <div class="h-50 row justify-content-center mr-5">
                <a class="btn-primary btn-lg active" role="button" aria-pressed="true" asp-action="Create">Add New Patient</a>
            </div>
        </div>

    </div>