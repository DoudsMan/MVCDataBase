@{
    ViewData["Title"] = "Home Page";
}

<div class="text-sm-left">
    <h1 class="display-4">Welcome</h1>
</div>


<div class="container-fluid">
    <div class="row">
        <div class="col">
            <!--Carousel Wrapper-->
            <div id="carousel-example-1z" class="carousel slide carousel-fade" data-ride="carousel">
                <!--Indicators-->
                <ol class="carousel-indicators">
                    <li data-target="#carousel-example-1z" data-slide-to="0" class="active"></li>
                    <li data-target="#carousel-example-1z" data-slide-to="1"></li>
                    <li data-target="#carousel-example-1z" data-slide-to="2"></li>
                </ol>
                <!--/.Indicators-->
                <!--Slides-->
                <div class="carousel-inner" role="listbox">
                    <!--First slide-->
                    <div class="carousel-item active">
                        <img class="d-block w-100 rounded" src="https://azbigmedia.com/wp-content/uploads/2017/11/doctor-shortage.jpg"
                             alt="First slide">
                    </div>
                    <!--/First slide-->
                    <!--Second slide-->
                    <div class="carousel-item">
                        <img class="d-block w-100 rounded" src="https://dlg7f0e93aole.cloudfront.net/wp-content/uploads/doctor-750x450.jpg"
                             alt="Second slide">
                    </div>
                    <!--/Second slide-->
                    <!--Third slide-->
                    <div class="carousel-item">
                        <img class="d-block w-100 rounded" src="https://asbestoscasetracker.com/wp-content/uploads/2018/09/Doctor-reading-lung-X-ray-178399615-750x450.jpg"
                             alt="Third slide">
                    </div>
                    <!--/Third slide-->
                </div>
                <!--/.Slides-->
                <!--Controls-->
                <a class="carousel-control-prev" href="#carousel-example-1z" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carousel-example-1z" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
                <!--/.Controls-->
            </div>
            <!--/.Carousel Wrapper-->
        </div>

        <div class="col">
            <h3 class="text-sm-left font-weight-light text-dark mt-5">
                When it comes to your family's health, you can count on Brookings Medical Center. Our physicians, health providers, nurses and staff bring you quality, comprehensive health care, right here in our community.
            </h3>
        </div>

    </div>

</div>



<div class="container-fluid rounded mt-3">

    <div class="row">
        <div class="col bg-info m-2 rounded" style="display: inline-block; text-align: center;">
            <h1 class="text-center">Medical Services</h1>
            <span style="color:#393a40" class="fa fa-briefcase-medical fa-10x"></span>
            <ul class="list-unstyled m-sm-4">
                <li>Allergy (Asthma)</li>
                <li>Anesthesiology</li>
                <li>Audiology</li>
                <li>Orthopedics</li>
                <li>Hermatology</li>
                <li>Cardiac Surgery</li>
                <li>Pediatric & Adolescent Medicine</li>
                <li>Ear Nose & Throat</li>
                <li>Intensive Care</li>
                <li>Laboratory</li>
                <li>Medical Transport</li>
            </ul>

        </div>
        <div class="col bg-info m-2 rounded" style="display: inline-block; text-align: center;">
            <h1 class="text-center">Community</h1>
            <i style="color:#393a40" class="fas fa-users fa-10x"></i>
            <ul class="list-unstyled m-sm-4">
                <li>Brookings Area Habitat for Humanity</li>
                <li>Volunteers of America, Dakotas</li>
                <li>South Dakota State University Service-Learning Initiative</li>
                <li>Salvation Army</li>
            </ul>
        </div>
        <div class="col bg-info m-2 rounded" style="display: inline-block; text-align: center;">
            <h1 class="text-center">Awards</h1>
            <i style="color:#393a40" class="fas fa-star fa-10x"></i>
            <ul class="list-unstyled m-sm-4">
                <li>American Hospital Association Quest For Quality Prize</li>
                <li>Hospital Award For Volunteer Excellence</li>
                <li>AHA Innovation Challenge</li>
                <li>Carolyn Boone Lewis Equity of Care Award</li>
            </ul>
        </div>
    </div>
</div>


<div>
    <p class="d-flex">Learn about more <a class="text-light px-1" asp-area="" asp-controller="Home" asp-action="About"> about </a> the Brookings Medical Center.</p>
</div>
